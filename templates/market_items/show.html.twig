{% extends 'base.html.twig' %}

{% block title %}MarketItems{% endblock %}

{% block body %}
    <h1>MarketItems</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ market_item.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ market_item.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ market_item.description }}</td>
            </tr>
            <tr>
                <th>Sold</th>
                <td>{{ market_item.sold ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PostDate</th>
                <td>{{ market_item.postDate ? market_item.postDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stores_show',{'id':market_item.store.id}) }}">back to store</a>

    <a href="{{ path('app_market_items_edit', {'id': market_item.id}) }}">edit</a>

    {{ include('market_items/_delete_form.html.twig') }}
{% endblock %}
