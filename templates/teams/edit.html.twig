{% extends 'base.html.twig' %}

{% block title %}Edit Teams{% endblock %}

{% block body %}
<div class="nk-widget nk-widget-highlighted">
    <h1 class="nk-widget-title"><span><span class="text-main-1">Edit</span> Team</span></h1>
    <div class="nk-widget-content">
    
    

    {{ include('teams/_form.html.twig', {'button_label': 'Update'}) }}
<div class="nk-gap-1"></div>
    <a href="{{ path('app_teams_index') }}" class="nk-btn nk-btn-rounded nk-btn-color-main-1">back to list</a>
<div class="nk-gap-1"></div>
    {{ include('teams/_delete_form.html.twig') }}
      <table class="nk-table">
        <thead>
            <tr>
                <th>User</th>
                <th>Message</th>
                <th>RequestDate</th>
                <th>Accepted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for join_request in join_requests %}
            <tr>
                <td>{{ join_request.user.username }}</td>
                <td>{{ join_request.message }}</td>
                <td>{{ join_request.requestDate ? join_request.requestDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ join_request.accepted ? 'Yes' : 'No' }}</td>

                <td>
                    {% if join_request.accepted is null or join_request.accepted == false  %}<a href="{{ path('app_join_requests_accept_team', {'id': join_request.team.id ,'jrid': join_request.id}) }}">accept</a>{% endif %}
                    {% if join_request.accepted is null or join_request.accepted == true  %}<a href="{{ path('app_join_requests_decline_team', {'id': join_request.team.id,'jrid': join_request.id}) }}">decline</a>{% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
