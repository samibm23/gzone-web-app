{% extends 'base.html.twig' %}

{% block title %}Games{% endblock %}

{% block body %}
    <h1>Games</h1>

    <table class="table">
        <tbody>

        <tr>
            <th>Name</th>
            <td>{{ game.name }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img style="height: 100px; width: 100px" src="{{ asset('images/games/'~game.photo_url) }}" ></td>

        </tr>
        <tr>
            <th>Description</th>
            <td>{{ game.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_front') }}">back to list</a>




{% endblock %}

