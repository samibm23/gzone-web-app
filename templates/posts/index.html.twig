</script>

<div class="nk-pagination nk-pagination-center">
    <a href="#" class="nk-pagination-prev">
        <span class="ion-ios-arrow-back"></span>
    </a>
    <nav>
        <a class="nk-pagination-current" href="{{ knp_pagination_render(posts) }}">1</a>

    </nav>
    <a href="#" class="nk-pagination-next">
    </a>
    
</div>
<div class="nk-gap-1"></div>
<a href="{{ path('app_posts_new') }} " style="background-color: #ff4343;border-radius: 4px;color: #ffffff; display: block;font-size: 13px; font-weight: 700;letter-spacing: 2px;text-transform: uppercase;width: 460px;padding: 14px 0;position: relative;margin: 0 auto; " type="submit" class="btn btn-danger btn-fw">Create new</a>
