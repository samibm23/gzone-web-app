{% extends 'base.html.twig' %}

{% block title %}JoinRequests{% endblock %}

{% block body %}
    <h1>JoinRequests</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ join_request.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ join_request.message }}</td>
            </tr>
            <tr>
                <th>RequestDate</th>
                <td>{{ join_request.requestDate ? join_request.requestDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Accepted</th>
                <td>{{ join_request.accepted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ResponseDate</th>
                <td>{{ join_request.responseDate ? join_request.responseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Invitation</th>
                <td>{{ join_request.invitation ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_join_requests_index') }}">back to list</a>

    <a href="{{ path('app_join_requests_edit', {'id': join_request.id}) }}">edit</a>

    {{ include('join_requests/_delete_form.html.twig') }}
{% endblock %}
