{% extends 'base.html.twig' %}

{% block title %}JoinRequests index{% endblock %}

{% block body %}
    <h1>JoinRequests index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>RequestDate</th>
                <th>Accepted</th>
                <th>ResponseDate</th>
                <th>Invitation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for join_request in join_requests %}
            <tr>
                <td>{{ join_request.id }}</td>
                <td>{{ join_request.message }}</td>
                <td>{{ join_request.requestDate ? join_request.requestDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ join_request.accepted ? 'Yes' : 'No' }}</td>
                <td>{{ join_request.responseDate ? join_request.responseDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ join_request.invitation ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_join_requests_show', {'id': join_request.id}) }}">show</a>
                    <a href="{{ path('app_join_requests_edit', {'id': join_request.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_join_requests_new') }}">Create new</a>
{% endblock %}
