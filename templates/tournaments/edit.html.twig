{% extends 'base.html.twig' %}

{% block title %}Edit Tournaments{% endblock %}

{% block body %}
    <h1>Edit Tournaments</h1>

    {{ include('tournaments/_form.html.twig', {'button_label': 'Update'}) }}

    {{ include('tournaments/_delete_form.html.twig') }}
          <table class="nk-table">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Team</th>
                <th>Message</th>
                <th>RequestDate</th>
                <th>Accepted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for join_request in join_requests %}
            <tr>
                <td><img src="{{join_request.team.photoUrl}}" width="100" height="100"  alt=""></td>
                <td><a href="{{ path('app_teams_show', {'id': join_request.team.id}) }}">{{ join_request.team.name }}</a></td>
                <td>{{ join_request.message }}</td>
                <td>{{ join_request.requestDate ? join_request.requestDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ join_request.accepted ? 'Yes' : 'No' }}</td>

                <td>
                    {% if join_request.accepted is null or join_request.accepted == false  %}<a href="{{ path('app_join_requests_accept_tournament', {'id': join_request.tournament.id ,'jrid': join_request.id}) }}">accept</a>{% endif %}
                    {% if join_request.accepted is null or join_request.accepted == true  %}<a href="{{ path('app_join_requests_decline_tournament', {'id': join_request.tournament.id,'jrid': join_request.id}) }}">decline</a>{% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_tournaments_index') }}" class="nk-btn nk-btn-rounded nk-btn-color-main-1">back to list</a>
{% endblock %}
