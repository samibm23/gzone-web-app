{% extends 'base.html.twig' %}

{% block title %}Tournaments index{% endblock %}

{% block body %}
    <h1>Tournaments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>RequiredTeams</th>
                <th>TeamSize</th>
                <th>Requestable</th>
                <th>Approved</th>
                <th>CreateDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                <td>{{ tournament.id }}</td>
                <td>{{ tournament.name }}</td>
                <td>{{ tournament.description }}</td>
                <td>{{ tournament.requiredTeams }}</td>
                <td>{{ tournament.teamSize }}</td>
                <td>{{ tournament.requestable ? 'Yes' : 'No' }}</td>
                <td>{{ tournament.approved ? 'Yes' : 'No' }}</td>
                <td>{{ tournament.createDate ? tournament.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tournaments_show', {'id': tournament.id}) }}">show</a>
                    <a href="{{ path('app_tournaments_edit', {'id': tournament.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tournaments_new') }}">Create new</a>
{% endblock %}
