{% extends 'base.html.twig' %}

{% block title %}Tournaments index{% endblock %}

{% block body %}
    
    <div class="nk-gap-1"></div>
    <div class="container">
        <ul class="nk-breadcrumbs">
            <li><span class="fa fa-angle-right"></span></li>
            <li><span class="fa fa-angle-right"></span></li>
            <li><span>TOURNAMENTS</span></li>
        </ul>
    </div>
    <div class="nk-gap-1"></div>
     {% block stylesheets%}
  {#<input type="text" id="search" class="form-control" placeholder="Search">#}
  <div class="nk-widget">
                        <div class="nk-widget-content">
                            <form action="#" class="nk-form nk-form-style-1" novalidate="novalidate">
                                <div class="input-group">
                                    <input type="text" id="search" class="form-control" placeholder="Type something...">
                                    <button class="nk-btn nk-btn-color-main-1"><span class="ion-search"></span></button>
                                </div>
                            </form>
                        </div>
                    </div>

   
    <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $("#search").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    {% endblock %}

    <table class="nk-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>RequiredTeams</th>
                <th>TeamSize</th>
                <th>Requestable</th>
                <th>Approved</th>
                <th>CreateDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                <td>{{ tournament.id }}</td>
                <td>{{ tournament.name }}</td>
                <td>{{ tournament.description }}</td>
                <td>{{ tournament.requiredTeams }}</td>
                <td>{{ tournament.teamSize }}</td>
                <td>{{ tournament.requestable ? 'Yes' : 'No' }}</td>
                <td>{{ tournament.approved ? 'Yes' : 'No' }}</td>
                <td>{{ tournament.createDate ? tournament.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tournaments_show', {'id': tournament.id}) }}" class="nk-btn nk-btn-rounded nk-btn-color-main-1">show</a>
                    {% if tournament.admin.id == userId%}<a href="{{ path('app_tournaments_edit', {'id': tournament.id}) }}" class="nk-btn nk-btn-color-primary">edit</a>{% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tournaments_new') }}" class="nk-btn nk-btn-rounded nk-btn-color-main-1">Create new</a>
{% endblock %}
